<div id='chatroom_container', class= 'row'>
<div id='left-container', class='col-md-5 offset-1'>
    <h3>Hi, <%= current_user.email %></h3>
    <br>
    <h4>Available Users for Chat</h4>
    <div class='user-container card'>
        <div class="card-body">
            <%= turbo_stream_from 'users'%>
            <div id='users'>
                <%= render @users %>
            </div>
        </div>
    </div>
    
    <h4>Available Rooms for Chat</h4>
    <div class='room-container card'>
        <div class="card-body">
            <%= turbo_stream_from 'rooms' %>
            <div id='rooms'>
                <%= render @rooms %>
            </div>
            <%= render 'new_room' %>
        </div>
    </div>

</div>

<div id='right-container', class='card col-md-5'>
    <div class="card-body">
        <% if @single_room %>
            <div id='single_room'>
                <h4 class='text-center'><%= @user&.email || @single_room.name %></h4>
                <%= turbo_stream_from @single_room %>
                <div id='messages'>
                    <%= render @messages %>
                </div>
                <%= render 'messages/new_message' %>
            </div>
        <% else %>
            <h4>Please select any room.</h4>
        <% end %>
    </div>
</div>
